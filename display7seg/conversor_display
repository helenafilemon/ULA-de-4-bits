module conversor_display (
    input  wire [4:0] sum_in,
    output wire [6:0] saida_dezena,
    output wire [6:0] saida_unidade
);

    wire [3:0] w_dezenas;
    wire [3:0] w_unidades;

    // 1. Instancia o conversor de Binário para BCD (este módulo não muda).
    bin5_para_bcd conversor_bin_bcd_inst (
        .bin_in(sum_in),
        .bcd_dezenas(w_dezenas),
        .bcd_unidades(w_unidades)
    );

    // 2. Instancia o decodificador para o display de DEZENAS (usando a nova versão).
    bcd_para_7seg decod_dezenas (
        .bcd_in(w_dezenas),
        .seg_out(saida_dezena)
    );

    // 3. Instancia o decodificador para o display de UNIDADES (usando a nova versão).
    bcd_para_7seg decod_unidades (
        .bcd_in(w_unidades),
        .seg_out(saida_unidade)
    );

endmodule
