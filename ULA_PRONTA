module ULA_Pronta(ins, select, outs,la0,lb0,lc0,ld0,le0,lf0,lg0,la1,lb1,lc1,ld1,le1,lf1,lg1);
	input [7:0]ins;
	input [2:0]selet;
	output [7:0] outs;
	output la0,lb0,lc0,ld0,le0,lf0,lg0,la1,lb1,lc1,ld1,le1,lf1,lg1;
	wire [4:0] s_add;
	wire [4:0] s_sub;
	wire [7:0] s_mult;
	
	multiplicador MT(
		.A(ins[3:0]),
		.B(ins[7:4]),
		.S(s_mult)	
	);
	
	somadorde4bits SM(
