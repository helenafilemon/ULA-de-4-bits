		.B(ins[7:4]),
		.S(s_add[3:0]),
		.Cout(s_add[4])
	);
	
	subtrator_4bits SB(
		.A(ins[3:0]),
		.B(ins[7:4]),
		.S(s_sub[3:0]),
		.Bout(s_sub[4])
